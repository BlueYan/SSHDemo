<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.mark.project.pss.service.impl.DepartmentServiceImpl" id="departmentService">
        <property name="departmentDAO" ref="departmentDAO"/>
    </bean>

    <bean class="com.mark.project.pss.service.impl.EmployeeServiceImpl" id="employeeService">
        <property name="employeeDAO" ref="employeeDAO"/>
    </bean>

    <bean class="com.mark.project.pss.service.impl.PermissionServiceImpl" id="permissionService">
        <property name="permissionDAO" ref="permissionDAO"/>
    </bean>

    <bean class="com.mark.project.pss.service.impl.RoleServiceImpl" id="roleService">
        <property name="roleDAO" ref="roleDAO"/>
    </bean>

</beans>
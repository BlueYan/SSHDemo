<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <!--
        配置相关的Action
        NOTE: struts.xml配置文件要放到resource跟目录下
    -->
    <package name="pssPkg" extends="struts-default" namespace="/pss">
        <!--
            之前struts2没有与Spring整合之前 class是填写对应的Action的全限定名
            现在与spring整合后我们class的值填写在spring中配置的别名就可以
        -->
        <action name="department_*" class="departmentAction" method="{1}">
            <result name="LIST">/WEB-INF/pss/views/department/list.jsp</result>
            <result name="input">/WEB-INF/pss/views/department/input.jsp</result>
            <!--
                从编辑页面调到回列表页面 要用action作为媒介跳转
            -->
            <result type="redirectAction">department_list</result>
        </action>

    </package>
</struts>